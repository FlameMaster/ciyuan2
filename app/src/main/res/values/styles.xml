<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary 定义 ActionBar 的背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- colorPrimaryDark 定义状态栏的背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- colorAccent 为 colorControlActivated 的默认值，该值用户显示控件的高亮状态 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- app背景色 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- textColor 定义标题文字的颜色 -->
        <item name="android:textColorPrimary">@color/white</item>
        <!--colorControlNormal 定义actionBar扩展按钮的颜色-->
        <item name="colorControlNormal">@color/white</item>

        <!--底部ico的默认颜色-->
        <!--<item name="android:textColorSecondary">@color/white</item>-->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
    <!--购物弹窗-->
    <style name="BuyDialogStyle" parent="android:Theme.Dialog">
        <!--<item name="android:windowBackground">@color/red</item>&lt;!&ndash;背景透明&ndash;&gt;-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <!--<item name="android:padding">1dp</item>-->
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>

        <item name="android:elevation">8dp</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="PictureBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!--<item name="android:homeAsUpIndicator">@drawable/web_detail_back</item>-->
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>
    <style name="PicturePopup" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:popupBackground">@color/transparent</item>
        <!-- 设置Menu菜单的背景色 -->
        <item name="android:itemBackground">@drawable/bg_menu_item</item>
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>

</resources>
