<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="TopHomeBD">

    </data>
    <merge>

        <!--番剧-->
        <com.fengchen.ciyuan2.wiget.RoundImageView
            android:id="@+id/movie"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/user_img"
            app:corner_radius="999dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/live"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_round"
            android:elevation="8dp"
            app:loadImageHeight="@{64}"
            app:loadImageUrl="@{@string/url_img_home_movie}"
            app:loadImageWidth="@{64}"
            app:border_thickness="4dp"
            app:border_outside_color="@color/gold"
            />

        <TextView
            android:id="@+id/movie_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:includeFontPadding="false"
            android:text="【--番剧--】"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/movie"
            app:layout_constraintRight_toRightOf="@+id/movie"
            app:layout_constraintTop_toBottomOf="@+id/movie"
            />
        <!--直播-->
        <com.fengchen.ciyuan2.wiget.RoundImageView
            android:id="@+id/live"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/user_img"
            app:corner_radius="999dp"
            app:layout_constraintLeft_toRightOf="@+id/movie"
            app:layout_constraintRight_toLeftOf="@+id/tv"
            app:layout_constraintTop_toTopOf="@+id/movie"
            android:background="@drawable/bg_round"
            android:elevation="8dp"
            app:loadImageHeight="@{64}"
            app:loadImageUrl="@{@string/url_img_home_live}"
            app:loadImageWidth="@{64}"
            app:border_thickness="2dp"
            app:border_inside_color="@color/test5"
            app:border_outside_color="@color/test4"
            />

        <TextView
            android:id="@+id/live_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:includeFontPadding="false"
            android:text="【--直播--】"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/live"
            app:layout_constraintRight_toRightOf="@+id/live"
            app:layout_constraintTop_toBottomOf="@+id/live"
            />
        <!--画作-->
        <com.fengchen.ciyuan2.wiget.RoundImageView
            android:id="@+id/tv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/user_img"
            app:corner_radius="999dp"
            app:layout_constraintLeft_toRightOf="@+id/live"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/movie"
            android:background="@drawable/bg_round"
            android:elevation="8dp"
            app:loadImageHeight="@{64}"
            app:loadImageUrl="@{@string/url_img_home_tv}"
            app:loadImageWidth="@{64}"
            app:border_thickness="4dp"
            app:border_outside_color="@color/test3"
            />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:includeFontPadding="false"
            android:text="【--电视--】"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv"
            app:layout_constraintRight_toRightOf="@+id/tv"
            app:layout_constraintTop_toBottomOf="@+id/tv"
            />
    </merge>
</layout>